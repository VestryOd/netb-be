{
  "compilerOptions": {
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "ES2017",
    "module": "CommonJS",
    "lib": ["ES2021"],
    "baseUrl": "./",
    "paths": {
      "@/*": ["./app/*"]
    },
    "outDir": "dist",
    "rootDir": "app",
    "noImplicitAny": true,
    "types": ["node"],
    "sourceMap": true,
    "moduleResolution": "node"
  },
  "exclude": ["node_modules"],
}
